<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/blue_contact_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Account:"
        app:layout_constraintTop_toBottomOf="@id/gallery_profile"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        android:text="1234567"
        app:layout_constraintTop_toBottomOf="@id/gallery_profile"
        app:layout_constraintLeft_toRightOf="@id/account"/>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Name:"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        android:hint="Enter your name"
        android:textColorHint="#90FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/account"
        app:layout_constraintLeft_toRightOf="@id/nickname"/>

    <TextView
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Bio:"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/bio_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:hint="Bio Text"
        android:background="#00FFFFFF"
        android:textColorHint="#90FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        app:layout_constraintLeft_toRightOf="@id/bio"/>

    <ImageView
        android:id="@+id/gallery_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/image"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_photo"/>

    <ImageView
        android:id="@+id/facebook_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/facebook_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio"/>

    <TextView
        android:id="@+id/facebook_profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="@id/facebook_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/facebook_profile_icon"
        app:layout_constraintLeft_toRightOf="@id/facebook_profile_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/instagram_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/instagram_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facebook_profile_icon"/>

    <TextView
        android:id="@+id/instagram_profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="@id/instagram_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/instagram_profile_icon"
        app:layout_constraintLeft_toRightOf="@id/instagram_profile_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/twitter_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/twitter_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instagram_profile_icon"/>

    <TextView
        android:id="@+id/twitter_profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="@id/twitter_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/twitter_profile_icon"
        app:layout_constraintLeft_toRightOf="@id/twitter_profile_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/tiktok_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/tiktok_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitter_profile_icon"/>

    <TextView
        android:id="@+id/tiktok_profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="@id/tiktok_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/tiktok_profile_icon"
        app:layout_constraintLeft_toRightOf="@id/tiktok_profile_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/telegram_profile_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/telegram_icon"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tiktok_profile_icon"/>

    <TextView
        android:id="@+id/telegram_profile_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintTop_toTopOf="@id/telegram_profile_icon"
        app:layout_constraintBottom_toBottomOf="@id/telegram_profile_icon"
        app:layout_constraintLeft_toRightOf="@id/telegram_profile_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/facebook_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/facebook_link_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Facebook Link"
            android:text="https://"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/facebook_info_save_btn"/>

        <ImageView
            android:id="@+id/facebook_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/facebook_link_et"
            app:layout_constraintBottom_toBottomOf="@id/facebook_link_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/facebook_link_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instagram_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/instagram_user_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Username"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/instagram_info_save_btn"/>

        <EditText
            android:id="@+id/instagram_link_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Instagram Link"
            android:text="https://"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/instagram_user_et"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/instagram_info_save_btn"/>

        <ImageView
            android:id="@+id/instagram_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/instagram_link_et"
            app:layout_constraintBottom_toBottomOf="@id/instagram_link_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/instagram_link_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/twitter_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/twitter_user_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Username"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/twitter_info_save_btn"/>

        <EditText
            android:id="@+id/twitter_link_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Twitter Link"
            android:text="https://"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/twitter_user_et"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/twitter_info_save_btn"/>

        <ImageView
            android:id="@+id/twitter_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/twitter_link_et"
            app:layout_constraintBottom_toBottomOf="@id/twitter_link_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/twitter_link_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tiktok_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/tiktok_user_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Username"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tiktok_info_save_btn"/>

        <EditText
            android:id="@+id/tiktok_link_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Tiktok Link"
            android:text="https://"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tiktok_user_et"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tiktok_info_save_btn"/>

        <ImageView
            android:id="@+id/tiktok_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/tiktok_link_et"
            app:layout_constraintBottom_toBottomOf="@id/tiktok_link_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tiktok_link_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/telegram_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/telegram_user_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Username"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/telegram_info_save_btn"/>
        <ImageView
            android:id="@+id/telegram_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/telegram_user_et"
            app:layout_constraintBottom_toBottomOf="@id/telegram_user_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/telegram_user_et"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/username_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Name"
            android:inputType="textCapSentences"
            android:maxLength="25"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/name_info_save_btn"/>
        <ImageView
            android:id="@+id/name_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/username_et"
            app:layout_constraintBottom_toBottomOf="@id/username_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/username_et"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bio_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone">

        <EditText
            android:id="@+id/bio_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="Bio"
            android:inputType="textCapSentences"
            android:maxLength="50"
            android:textColorHint="#90FFFFFF"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bio_info_save_btn"/>
        <ImageView
            android:id="@+id/bio_info_save_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintTop_toTopOf="@id/bio_et"
            app:layout_constraintBottom_toBottomOf="@id/bio_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/bio_et"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.naver.android.helloyako.imagecrop.view.ImageCropView
        xmlns:imagecrop="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imagecrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        imagecrop:outsideLayerColor="#99000000"
        imagecrop:setInnerGridMode="on"
        imagecrop:gridInnerStroke="1dp"
        imagecrop:gridInnerColor="#660084FF"
        imagecrop:setOuterGridMode="on"
        imagecrop:gridOuterStroke="1dp"
        imagecrop:gridOuterColor="@color/blue"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/cancel_crop_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:rotation="45"
        android:src="@drawable/plus"
        android:visibility="gone"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="@id/imagecrop"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/accept_crop_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_margin="15dp"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/imagecrop"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>